
@inject SignInManager<IdentityUser> signInManager;


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - reView</title>
    <link rel="stylesheet" href="/css/layout.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <img src="/assets/logoo.svg.png" alt="logo" class="logo">
        <nav>
            <div class="hamburger">
                <div class="line"></div>
                <div class="line"></div>
                <div class="line"></div>
            </div>
            <ul class="nav-area">
                <li><strong><a asp-action="Index" asp-controller="Home">Home</a></strong></li>
                <li><strong><a asp-action="Phones" asp-controller="ListItems">Phones</a></strong></li>
                <li><strong><a asp-action="Headphones" asp-controller="ListItems">Headphones</a></strong></li>
            </ul>
        </nav>
        <div id="authentication">
            @if (signInManager.IsSignedIn(User))
            {
                <form method="post" asp-action="Logout" asp-controller="Account">
                    <button  class="btn-area" type="submit">
                        Logout @User.Identity.Name
                    </button>
                </form>
            }
            else
            {
            <a asp-action="Login" asp-controller="Account" class="btn-area">Login</a>
            <a asp-action="Register" asp-controller="Account" class="btn-area">Register</a>              
            }
        </div>
    </header>
    @*<div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>*@
    @RenderBody()

    <script src="~/js/hamburger.js"></script>
   
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
